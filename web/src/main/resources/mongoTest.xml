<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <bean id="mongoClient" class="dev.local.mongo.MongoFactoryBean">
        <property name="servers">
            <array>
                <value>172.16.1.91</value>
            </array>
        </property>
        <property name="mongoCredentials">
            <array>
                <ref bean="mongoCredential"/>
            </array>
        </property>
    </bean>
    <bean name="mongoCredential" class="dev.local.mongo.MongoCredentialFactoryBean">
        <property name="dbName" value="test" />
        <property name="user" value="test" />
        <property name="pwd" value="test" />
    </bean>
    <bean id="morphia" class="dev.local.mongo.MorphiaFactoryBean">
        <property name="mapPackages">
            <array>
                <value>dev.local.mongo.model</value>
            </array>
        </property>
        <property name="ignore" value="false"/>
    </bean>
    <bean id="datastore" class="dev.local.mongo.DataStoreFactoryBean">
        <property name="morphia" ref="morphia"/>
        <property name="mongoClient" ref="mongoClient"/>
        <property name="dbName" value="liwtest"/>
        <property name="toEnsureIndex" value="true"/>
        <property name="toEnsureCaps" value="true"/>
    </bean>

    <context:component-scan base-package="dev.local.mongo.dao" />
</beans>